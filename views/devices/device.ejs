<script src="/socket.io/socket.io.js"></script>

<script>
    var socket = io()
    socket.emit('login_dash', '<%= owner %>')

    socket.on('device_online', device => {
        if (device.id == '<%= device.id %>') {
            $(".dev-status").removeClass("text-red-400").addClass("text-green-400").html("ONLINE")
        }
    })

    socket.on('device_disconnected', device => {
        if (device.id == '<%= device.id %>') {
            $(".dev-status").removeClass("text-green-400").addClass("text-red-400").html("OFFLINE")
        }
    })

    $("#manage_device").on('change', () => {
        console.log($("#manage_device").val())
    })
    $(".tabButton").on('click', openTab)

    function openTab(evt) {
        var i, tabcontent, tablinks;
        var tabName = evt.target.innerHTML
        tabcontent = document.getElementsByClassName("tabcontent");
        for (i = 0; i < tabcontent.length; i++) {
            tabcontent[i].style.display = "none";
        }

        $(".activeTab").removeClass(
            "bg-gray-300 inline-block border m-2 rounded-lg py-2 px-6 text-black font-semibold activeTab").addClass(
            "bg-white inline-block m-2 rounded-lg py-2 px-4 text-blue-500 hover:text-blue-800 font-semibold")
        $(evt.currentTarget).children().addClass(
            'bg-gray-300 inline-block border m-2 rounded-lg py-2 px-6 text-black font-semibold text-black activeTab'
        )

        document.querySelector(`.${tabName}`).style.display = "block";
        evt.currentTarget.className += " active";
    }
</script>

