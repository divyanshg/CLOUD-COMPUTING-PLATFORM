<!DOCTYPE html>
<html lang="en">
<head>
    <title>Services</title>
    <%- include("../headers.ejs") %>
    <style>
        .service{
            min-height:250px;
        }
    </style>
</head>
<body>
    <a class="skip-link" href="#maincontent">Skip to main</a>
    <%- include('../add-ons/preloader.ejs') %>
    <header class="w-full h-20 bg-white p-4 flex">
        <div class="w-full py-2"></div>
        <div class="w-1/3 py-2">
            <ul class="flex ml-32">
                <li class="font-bold text-black text-xl mx-3">Plans</li>
                <li class="font-bold text-black text-xl mx-3">Solutions</li>
                <li class="font-bold text-black text-xl mx-3"><a href="/login">Sign in</a></li>
                <li class="text-xl mx-3 -mt-2">
                    <button class="font-bold bg-black text-white rounded-full px-3 py-2" style="height: 40px;width:40px;"></button>
                </li>
            </ul>
        </div>
    </header>
    <main class="w-full" style="height: 1000px;">
        <main class="bg-white w-full" style="height:10%;">
            <div class="get-started-form w-1/2 mx-auto px-6 text-center h-12 mt-32">
                <div class="flex w-full mx-auto bg-white border-4 border-blue-400 rounded-lg shadow-lg py-3">
                    <input type="email" focus class="w-full rounded-l-lg h-12 py-6 px-4 focus:outline-none text-xl"
                        placeholder="Filter services">
                </div>
            </div>
        </main>
        <section class="w-full" style="margin-top:150px;">
            <% services.forEach(service => { %>
                <div class="service w-1/4 p-4 cursor-pointer" style="background-color: <%= service.cardColor %>;">
                    <div class="w-full items-center" style="height:150px;">
                        <img src="<%= service.iconSrc %>" class="mx-auto my-auto" style="height:125px;width:200px;margin-top:25%;">
                    </div>
                    <div class="w-full text-center -mt-4">
                        <span class="font-semibold text-xl"><%= service.name %></span>
                    </div>
                </div>
            <% }) %>
        </section>
    </main>
</body>
</html>