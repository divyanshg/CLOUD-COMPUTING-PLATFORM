<script>
    var editor = ace.edit("devices-template");
    editor.setTheme("ace/theme/monokai");
    editor.session.setMode("ace/mode/json");
    console.log()

    const addToURL = "/create/bulk-provisions/<%= projectID %>"

    async function addToQueue() {
        let document = {
            "name": $("#template_name").val(),
            "description": $("#desc").val(),
            "feeds": JSON.parse(editor.getValue()).feeds
        }

        let response = await fetch(addToURL, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json;charset=utf-8'
            },
            body: JSON.stringify({
                document
            })
        })

        if(response.status == 200){
            alert("Queued successfully")
            setTimeout(() => {
                window.location.replace('/activity/<%= projectID %>')
            }, 3000)
        }
        let result = await response.json()
    }
</script>

